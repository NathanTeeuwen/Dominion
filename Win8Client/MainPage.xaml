<Page
    x:Class="Win8Client.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Win8Client"        
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>        
        <ResourceDictionary Source="StandardStyles.xaml" />        
    </Page.Resources>
    

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >    
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>            
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>        
        <TextBlock Grid.Row="0" FontSize="100" VerticalAlignment="Center" HorizontalAlignment="Center">Dominion Picker</TextBlock>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <!-- Page for Current Cards-->
                <Grid>                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Button Click="Randomize" Style="{StaticResource RefreshAppBarButtonStyle}"></Button>
                        <Button Style="{StaticResource SortAppBarButtonStyle}" BorderThickness="0">                            
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="By Name" Click="SortCurrentByName"/>
                                    <MenuFlyoutItem Text="By Cost" Click="SortCurrentByCost"/>
                                    <MenuFlyoutItem Text="By Expansion" Click="SortCurrentByExpansion"/>
                                </MenuFlyout>                                    
                            </Button.Flyout>
                        </Button>                        
                    </StackPanel>
                    <ScrollViewer Grid.Row="1">
                        <ListView Name="CurrentCardsListView"  ItemsSource="{Binding CurrentDeck.Cards}" SelectionMode="Multiple" CanDragItems="True" DragItemsStarting="CurrentCardsListView_DragItemsStarting">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapGrid MaximumRowsOrColumns="5" Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Image Width="150" Height="240" Source="{Binding ImageUrl}"></Image>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                    </ScrollViewer>
                    <ScrollViewer Grid.Row="2">
                        <ListView Name="CommonCardsListView"  ItemsSource="{Binding CommonCards.Cards}" SelectionMode="Multiple" CanDragItems="True" DragItemsStarting="CurrentCardsListView_DragItemsStarting">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapGrid MaximumRowsOrColumns="5" Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Image Width="150" Height="240" Source="{Binding ImageUrl}"></Image>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                    </ScrollViewer>
                </Grid>
                <!-- Horizontal Spacer-->
                <StackPanel Width="100"></StackPanel>
                <!-- Page for Strategies -->
                <StackPanel>
                    <TextBlock FontSize="30">Strategies</TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton>Player 1</RadioButton>
                        <RadioButton>Player 2</RadioButton>
                    </StackPanel>

                    <!-- items control of System.Collections.ObjectModel.ObservableCollection<CardAcceptanceDescription> -->
                    <ListView Name="CurrentStrategyListView"  ItemsSource="{Binding CurrentStrategy.Value.CardAcceptanceDescriptions}" CanReorderItems="True" AllowDrop="True" Drop="CurrentCardsListView_Drop" BorderBrush="Blue" BorderThickness="1">
                        <ListView.Resources>
                            <local:ComparisonToIntegerConverter x:Key="ComparisonToIntegerConverter" />
                            <local:CountSourceToIntegerConverter x:Key="CountSourceToIntegerConverter" />
                            <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />                            
                        </ListView.Resources>
                        <ListView.ItemTemplate>
                            <!-- Data Template for CardAcceptanceDescription -->
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Padding="0,0,5,0">Get</TextBlock>
                                    <ComboBox Margin="5" SelectedIndex="{Binding Count.Value, Mode=TwoWay}">
                                        <ComboBoxItem>0</ComboBoxItem>
                                        <ComboBoxItem>1</ComboBoxItem>
                                        <ComboBoxItem>2</ComboBoxItem>
                                        <ComboBoxItem>3</ComboBoxItem>
                                        <ComboBoxItem>4</ComboBoxItem>
                                        <ComboBoxItem>5</ComboBoxItem>
                                        <ComboBoxItem>6</ComboBoxItem>
                                        <ComboBoxItem>7</ComboBoxItem>
                                        <ComboBoxItem>8</ComboBoxItem>
                                        <ComboBoxItem>9</ComboBoxItem>
                                        <ComboBoxItem>10</ComboBoxItem>
                                        <ComboBoxItem>As Many as possible</ComboBoxItem>
                                    </ComboBox>
                                    <TextBlock Padding="0,0,5,0" Text="{Binding Card.Value.Name}"></TextBlock>                                    
                                    <ComboBox Margin="5" SelectedIndex="{Binding CountSource.Value, Mode=TwoWay, Converter={StaticResource CountSourceToIntegerConverter}}">
                                        <ComboBoxItem>When Count Of Pile</ComboBoxItem>
                                        <ComboBoxItem>When Count All Owned</ComboBoxItem>
                                        <ComboBoxItem>When Count In Hand</ComboBoxItem>                                        
                                        <ComboBoxItem>Always</ComboBoxItem>
                                    </ComboBox>
                                    <StackPanel Orientation="Horizontal" Visibility="{Binding SecondaryMatchVisible.Value, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Padding="0,0,5,0">is</TextBlock>
                                        <ComboBox Margin="5" SelectedIndex="{Binding Comparison.Value, Mode=TwoWay, Converter={StaticResource ComparisonToIntegerConverter}}">
                                            <ComboBoxItem>Less Than</ComboBoxItem>
                                            <ComboBoxItem>Less Than Or Equal</ComboBoxItem>
                                            <ComboBoxItem>Greater Than</ComboBoxItem>
                                            <ComboBoxItem>Greater Than Equal</ComboBoxItem>
                                            <ComboBoxItem>Equals</ComboBoxItem>
                                        </ComboBox>
                                        <ComboBox Margin="5" SelectedIndex="{Binding Threshhold.Value, Mode=TwoWay}">
                                            <ComboBoxItem>0</ComboBoxItem>
                                            <ComboBoxItem>1</ComboBoxItem>
                                            <ComboBoxItem>2</ComboBoxItem>
                                            <ComboBoxItem>3</ComboBoxItem>
                                            <ComboBoxItem>4</ComboBoxItem>
                                            <ComboBoxItem>5</ComboBoxItem>
                                            <ComboBoxItem>6</ComboBoxItem>
                                            <ComboBoxItem>7</ComboBoxItem>
                                            <ComboBoxItem>8</ComboBoxItem>
                                            <ComboBoxItem>9</ComboBoxItem>
                                            <ComboBoxItem>10</ComboBoxItem>
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <TextBlock FontSize="20" AllowDrop="True" Drop="CurrentCardsListView_Drop">Drag Cards here to include in strategy</TextBlock>
                </StackPanel>
                <!-- Horizontal Spacer-->
                <StackPanel Width="100"></StackPanel>
                <!-- Page for Settings -->
                <StackPanel>
                    <TextBlock FontSize="30">Enabled Expansions</TextBlock>                    
                    <ItemsControl ItemsSource="{Binding Expansions}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel></StackPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}" IsChecked ="{Binding IsEnabled.Value, Mode=TwoWay}"></CheckBox>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <StackPanel Height="20"></StackPanel>
                    <!-- Spacer-->
                    <!--
                    <CheckBox IsChecked="{Binding Use3OrMoreFromExpansions.Value, Mode=TwoWay}">Use or 3 more cards from a set</CheckBox>                    
                    <CheckBox IsChecked="{Binding RequirePlusBuy.Value, Mode=TwoWay}">Require + Buy</CheckBox>
                    <CheckBox IsChecked="{Binding RequirePlusCards.Value, Mode=TwoWay}">Require + Cards</CheckBox>
                    <CheckBox IsChecked="{Binding RequirePlus2Actions.Value, Mode=TwoWay}">Require + 2 Actions</CheckBox>
                    <CheckBox IsChecked="{Binding RequireTrashing.Value, Mode=TwoWay}">Require Trashing</CheckBox>
                    <CheckBox IsChecked="{Binding RequireAttack.Value, Mode=TwoWay}">Require Attack</CheckBox>
                    <CheckBox IsChecked="{Binding AllowAttack.Value, Mode=TwoWay}">Allow Attacks</CheckBox> -->
                </StackPanel>                
                <!--Horizontal  Spacer-->
                <StackPanel Width="100"></StackPanel>
                <!-- Page for All Cards-->
                <Grid>                
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Button Style="{StaticResource SortAppBarButtonStyle}" BorderThickness="0">
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="By Name" Click="SortAllByName"/>
                                    <MenuFlyoutItem Text="By Cost" Click="SortAllByCost"/>
                                    <MenuFlyoutItem Text="By Expansion" Click="SortAllByExpansion"/>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>                                              
                    </StackPanel>
                    <ScrollViewer Grid.Row="1">
                        <ListView Name="AllCardsListView" ItemsSource="{Binding AllCards.Cards}" SelectionMode="Multiple">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapGrid MaximumRowsOrColumns="5" Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Image Width="150" Height="240" Source="{Binding ImageUrl}"></Image>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </Grid>                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
